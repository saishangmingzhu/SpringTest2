<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="com.spring.saishang.dao.UserDao">
	<select id="getUser" resultType="com.spring.saishang.bean.User" parameterType="long">
		select * from user where id = #{id}
	</select>
</mapper> 
